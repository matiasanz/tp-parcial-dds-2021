{{#partial "titulo"}}
    <title>Pedidos Ya</title>
{{/partial}}

{{#partial "contenido"}}

    <main class="filas_centradas">
        <h2>Pedi2 Ya</h2>
        <section id="Inicio de sesion">
            <form action="/login" method="POST" class="form-centrado">
                <input type="text" name="username" placeholder="Username" required="required">
                <input type="password" name="password" placeholder="Password" required="required">
                <input type="submit" value="Iniciar Sesión">
            </form>

            {{#if mensaje}}
                <p class="msj_error">{{mensaje}}</p>
            {{/if}}
        </section>

        <section id="nuevo usuario">
            <p>¿Todavía no tienes una cuenta?</p> <a href="/signup">¡Registrate gratis!</a>
        </section>
    </main>

{{/partial}}

