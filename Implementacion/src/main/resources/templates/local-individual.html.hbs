    {{#partial "titulo"}}
        <title>Locales</title>
    {{/partial}}

    {{#partial "contenido"}}
        <H2>{{nombre}}</H2>
        <section id="info-local">
            <h3>Datos del Local:</h3>
            <ul>
                <li><Strong>Direccion: </Strong>{{Direccion}}</li>
                <br>
                <li><strong>Categorias:</strong>
                    <br>
                    <ul>
                        {{#categorias}}
                            <li><a href="/locales?categoria={{this}}">{{this}}</a></li><br>
                        {{else}}
                            <p>-</p>
                        {{/categorias}}
                    </ul>
                </li>
            </ul>
        </section>

        <section id="Menu">
            <h3>Menu:</h3>
            <ul>
                {{#Platos}}
                    <li><a href="/locales/{{../idLocal}}/platos/{{idPlato}}">{{nombre}}</a> ........... ${{precio}}</li>
                {{else}}
                    <p>Aún no se encuentran cargados los platos de este local, regrese más tarde</p>
                {{/Platos}}
            </ul>
        </section>

        <section id="carrito">
            <H3>Carrito:</H3>
            <div id="items">
                <p>Items:</p>
                <ul>
                    {{#items}}
                        <li>{{plato}} | {{cantidad}} u. | aclaraciones: {{aclaraciones}}
                            <!-- no me dejo usar DELETE -->
                            <form method="POST" action="/locales/{{idLocal}}/carrito/{{@index}}?method=delete">
                                <button type="submit">Eliminar</button>
                            </form>
                            <br>
                        </li>
                    {{else}}
                        <p>Aún no ha seleccionado ninguno</p>
                    {{/items}}
                </ul>
            </div>

            <div id="precio">
                <p>Precio Base: ${{precioBase}}</p>
                <p>>     Descuento por cliente {{categoria}}: ${{dtoCategoria}}</p>
                <p>>     Descuento por cupones: ${{dtoCupon}}</p>
                <p>Monto a abonar: <strong>${{precioFinal}}</strong></p>
            </div>

            <div id="comprar">
                <form id="form_envio" action="/pedidos" method="POST">
                    <input type="hidden" name="idLocal" value={{idLocal}}>
                    <label>Direccion </label>
                    <select id="direccion" name="direccion" form="form_envio">
                        {{#direcciones}}
                            <option value={{@index}}>{{calle}}</option><br>
                        {{/direcciones}}
                    </select>
                    <br>

                    <label>Descuento </label>
                    <select id="descuentos" name="descuento" form="form_envio">
                        {{#descuentos}}
                            <option value={{@index}}>{{detalle}}</option><br>
                        {{/descuentos}}
                    </select>
                    <br>
                    <input type="submit" value="Finalizar" form="form_envio"><p style="color:Red;">{{error}}</p><br>
                </form>
            </div>

        </section>

    {{/partial}}

{{> layout_cliente.html.hbs }}