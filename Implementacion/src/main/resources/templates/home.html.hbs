
    {{#partial "titulo"}}
        <title>Home</title>
    {{/partial}}

    {{#partial "contenido"}}
        <section id="presentacion" class="fondo-gris">
            <h2>¡Bienvenido {{nombreCliente}}!</h2>
        </section>

        <section id="recomendaciones">
            <p>¡Saboreá las mejores comedias sin moverte de tu casa!</p>

            <div id="top locales">
                Top Locales:
                <ol>
                    {{#Locales}}
                        <li><a href="/locales/{{id}}">{{nombre}}</a></li>
                    {{/Locales}}
                </ol>
            </div>

            <div id="top Categorias">
                Top Categorias:
                <ol>
                    {{#Categorias}}
                        <li><a href="/locales?categoria={{this}}">{{this}}</a></li>
                    {{/Categorias}}
                </ol>
            </div>
        </section>

    {{/partial}}

