{{#partial "titulo"}}
    <title>Pedidos</title>
{{/partial}}

{{#partial "contenido"}}
    <h1>Historial de pedidos</h1>

    <section id="pedidos">
        <ul>
            {{#pedidos}}
                <li>
                    <h3> <a href="/pedidos/{{id}}"> Pedido #{{numero}}</a> - [{{estado}}]</h3>
                    <strong> Fecha: </strong> {{fecha}} <br>
                    <strong> Importe: </strong> ${{importe}} <br>
                </li>
            {{else}}
                <p>Aún no has recibido ningún pedido</p>
            {{/pedidos}}
        </ul>
    </section>
{{/partial}}

{{>layout_local.html.hbs}}
