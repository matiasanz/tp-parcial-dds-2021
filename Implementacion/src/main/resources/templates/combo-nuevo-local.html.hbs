<!-- Local -->

    {{#partial "titulo"}}
        <title>Nuevo Combo</title>
    {{/partial}}

    {{#partial "contenido"}}
        <section id="Registro-combos">
            <form action="/platos" method="POST">
            <h2>Crear Plato</h2>
            >
                <label>Nombre del combo: </label>
                <input type="text" name="nombre" required><br>

                <input type="hidden" name="tipo" value="combo"><br>

                <input type="submit" value="Crear combo"><p style="color:Red;">{{mensaje}}</p><br>
            </form>
        </section>

        <section>
            <h3>Componentes: </h3>

            <ul>
                {{#componentes}}
                    <li>{{nombre}}</li>
                {{/componentes}}
            </ul>

            <form action="/platos/nuevo-combo" method="POST">
                <label>Agregar plato:</label>
                <select name="idPlato">
                    {{#platosDelLocal}}
                        <option value={{id}}>{{nombre}}</option>
                    {{/platosDelLocal}}
                </select>
                <input type="submit">
            </form>

        </section>
    {{/partial}}

{{> layout_local.html.hbs }}
